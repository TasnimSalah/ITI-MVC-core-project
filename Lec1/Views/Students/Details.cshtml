@model Lec1.Models.Student

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
    var photopath = $@"~/images/{Model.Photo}" ?? "NoImg.jpg";
}
<div>

    <div class="card text-center" style="width: 20rem;">
        <img class="card-img-top img-fluid " src="~/images/@Model.Photo" alt="student image ">
        <div class="card-body">
            <h1 class="text-bold text-capitalize text-danger"> @Html.DisplayFor(model => model.Name) </h1>
            <p class="card-text"><b>Age: </b>@Html.DisplayFor(model => model.Age)</p>
            <h5 class="card-text"> <b> Department: </b> @Html.DisplayFor(model => model.Department.Name)</h5>
        </div>
    </div>
</div>
<p>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-info p-2">Edit</a>
    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger p-2">Delete</a>
    <a asp-action="Index" class="btn btn-dark p-2">Back to List</a>

</p>

